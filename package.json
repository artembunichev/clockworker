{
  "name": "clockworker",
  "private": true,
  "version": "0.4.2",
  "description": "2D pixel game",
  "author": "spleekz",
  "scripts": {
    "lint": "eslint processes --ext .ts,.tsx",
    "lint:watch": "esw processes --ext .ts,.tsx -w --color",
    "typecheck-renderer": "tsc -p processes/renderer/tsconfig.json --noEmit",
    "typecheck-renderer:watch": "npm run typecheck-renderer -- --watch",
    "typecheck-main": "tsc -p processes/main/tsconfig.json --noEmit",
    "typecheck-main:watch": "npm run typecheck-main -- --watch",
    "start:web": "vite serve ./processes/renderer",
    "start:desktop": "electron ./dist/main/index.js",
    "build:renderer": "npm run typecheck-renderer && vite build ./processes/renderer --config ./processes/renderer/vite.config.ts --base=./",
    "build:main": "tsc -p processes/main/tsconfig.json",
    "build": "npm run lint && npm run build:renderer && npm run build:main",
    "package": "npm run build && electron-builder build --win -c.extraMetadata.main=dist/main/index.js",
    "release": "npm run package -- -p always"
  },
  "build": {
    "appId": "com.spleekz.clockworker",
    "productName": "clockworker",
    "win": {
      "target": "nsis",
      "icon": "dist/assets/clockworker-icon.ico"
    },
    "nsis": {
      "artifactName": "ClockworkerSetup.${version}.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "installerIcon": "dist/assets/clockworker-icon.ico",
      "createDesktopShortcut": "always"
    },
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "spleekz",
        "repo": "clockworker"
      }
    ]
  },
  "dependencies": {
    "@react-spring/web": "^9.5.2",
    "electron-updater": "^5.2.1",
    "is-electron": "^2.2.1",
    "mobx": "^6.6.1",
    "mobx-react-lite": "^3.4.0",
    "nanoid": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.34.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vitejs/plugin-react": "^2.0.0",
    "babel-plugin-styled-components": "^2.0.7",
    "electron": "^20.0.1",
    "electron-builder": "^23.1.0",
    "eslint": "^8.20.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-local-rules": "^1.3.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-watch": "^8.0.0",
    "prettier": "^2.7.1",
    "tiled-types": "^1.3.0",
    "typescript": "^4.6.4",
    "vite": "^3.0.0",
    "vite-plugin-checker": "^0.4.9",
    "vite-tsconfig-paths": "^4.0.3"
  }
}
